#!/bin/bash

set -e

. ${TINGLE_PREFIX:="/usr"}/lib/tingle/common

usage() {
    cat - >&2 <<EOF
Usage: tingle reboot
EOF
    exit 2
}

execd /etc/tingle/hooks/pre-reboot.d

reboot-politely 10 \
  "This system will be rebooted in ten minutes for a " \
  "software update.\n\n" \
  "Please save all open work and log out."

execd /etc/tingle/hooks/post-reboot.d

# vim:et:sts=4:sw=4:
